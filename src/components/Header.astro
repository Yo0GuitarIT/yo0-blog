---
import ThemeToggle from "./ThemeToggle";
import Navigation from "./Navigation.astro";
---

<header
  class="header-margin sticky top-0 z-0 flex items-center justify-between"
>
  <a
    href="/"
    class:list={[
      "text-xl tracking-wider select-none",
      Astro.url.pathname === "/" ? "text-accent" : "",
    ]}>Ryze</a
  >
  <div class="flex items-center justify-center gap-6">
    <Navigation />

    <div class="flex items-center justify-center gap-4">
      <ThemeToggle client:load />
      <a href="/rss.xml" aria-label="rss" title="rss"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-rss active-foreground size-5"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M5 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path><path
            d="M4 4a16 16 0 0 1 16 16"></path><path d="M4 11a9 9 0 0 1 9 9"
          ></path></svg
        ></a
      >
    </div>
  </div>
</header>
